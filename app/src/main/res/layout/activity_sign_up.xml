<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_height="56dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <ImageButton
            android:id="@+id/ibtn_sign_up_back"
            android:layout_width="15dp"
            android:layout_height="27dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="16dp"
            android:background="#ffffff"
            android:src="@drawable/ic_left_arrow_wh" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >

        <TextView
            android:id="@+id/now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#060606"
            android:text="지금 회원가입만 해도 "
            android:textSize="24sp" />


    </RelativeLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="32dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인 맞춤별 사이즈 추천"
            android:textSize="24sp"
            android:textColor="#7a36e4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#060606"
            android:text="을"
            android:textSize="24sp"
            />

    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="32dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#060606"
            android:text="받으실 수 있어요"
            android:textSize="24sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="292dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="34dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/textboxround"
            android:ems="10"
            android:hint="이름"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="center_vertical"
            android:textColor="#b8191919"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_marginTop="13dp"
            android:id="@+id/btn_sign_up_select_bithday"
            android:orientation="horizontal"
            android:layout_width="291.9dp"
            android:layout_height="46dp">
        <Spinner
            android:id="@+id/spinner_sign_up_select_year"
            android:background="@drawable/spinner_background"
            android:layout_width="90.9dp"
            android:layout_height="46dp"
            android:spinnerMode="dropdown"
            android:layout_marginRight="9.1dp"
            >
s
        </Spinner>
            <Spinner
                android:layout_marginRight="9.1dp"
                android:id="@+id/spinner_sign_up_select_month"
                android:background="@drawable/spinner_background"
                android:layout_width="90.9dp"
                android:spinnerMode="dropdown"
                android:layout_height="46dp">

            </Spinner>
            <Spinner
                android:id="@+id/spinner_sign_up_select_day"
                android:background="@drawable/spinner_background"
                android:layout_width="90.9dp"
                android:spinnerMode="dropdown"
                android:layout_height="46dp">

            </Spinner>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/textboxround">

            <EditText
                android:id="@+id/et_sign_up_email"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:ems="10"
                android:hint="이메일"
                android:inputType="textEmailAddress"
                android:background="@drawable/textboxround"
                android:textColor="#b8191919"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                android:paddingRight="8dp" />

            <Button
                android:id="@+id/btn_sign_up_emailoverlap"
                android:layout_width="65dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:background="#ffff"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="중복"
                android:textColor="#7a36e4"
                android:textSize="14sp" />
        </RelativeLayout>


        <EditText
            android:id="@+id/et_sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/textboxround"
            android:ems="10"
            android:textColor="#b8191919"
            android:textSize="14sp"
            android:hint="비밀번호"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/textboxround">

            <EditText
                android:id="@+id/et_sign_up_password_check"
                android:layout_width="214dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:textSize="14sp"
                android:textColor="#b8191919"
                android:background="@null"
                android:hint="비밀번호 확인"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <TextView
                android:id="@+id/tv_sign_up_overlap"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="불일치"
                android:textColor="#bf5ce5"
                android:textSize="14dp" />

        </RelativeLayout>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/btn_sign_up_emailoverlap"
            android:layout_alignParentStart="true"
            android:text="영문 대소문자,숫자,특수문자(.!@#$%)를 혼합하여 8~20자로 입력해주세요"
            android:textColor="#80191919"
            android:textSize="9.5sp" />
        <LinearLayout
            android:background="#80707070"
            android:layout_marginTop="20.5dp"
            android:layout_width="291.9dp"
            android:layout_height="1dp"
            android:layout_marginBottom="12.5dp"
            ></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80191919"
            android:lineSpacingExtra="6sp"
            android:textSize="10sp"
            android:text="다음버튼을 누르면, 개인정보취급방침 및 이용약관을 읽고 동의했음으로 간주합니다. "
            />
        <ImageButton
            android:id="@+id/btn_sign_up_next_page"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_purplearrow"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="21dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/3"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>





</LinearLayout>


