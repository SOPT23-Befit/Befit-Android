<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/ibtn_menu_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="befit"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_aaa_main_home_fragment"
                android:layout_width="wrap_content"
                android:layout_height="483dp">
            </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/lo_tab_aaa_main_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/vp_aaa_main_home_fragment">
        </android.support.design.widget.TabLayout>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_aaa_main_banner"
            android:layout_width="wrap_content"
            android:layout_height="90dp">
        </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/lo_tab_aaa_main_banner"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/vp_aaa_main_banner">
        </android.support.design.widget.TabLayout>



    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 추천 아이템"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_my_rec_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>