<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/dl_size_check_login_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#191919"
        />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/dl_size_check_login_text1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:id="@+id/tv_size_check_login_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="200dp"
                android:text="자동 로그인"

                android:textColor="#797979"
                android:textSize="15dp" />

            <ImageButton
                android:layout_toRightOf="@id/tv_size_check_login_auto_login"
                android:layout_marginLeft="8dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/buttonround"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border"
            >

            <ImageView
                android:id="@+id/iv_dl_size_check_login_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />
            <EditText
                    android:layout_toRightOf="@id/iv_dl_size_check_login_email"
                    android:id="@+id/et_dl_size_check_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="8dp"
                    android:hint="이메일"
                    android:layout_alignParentBottom="true"
                    android:background="@null"

             />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border"
            >

            <ImageView
                android:id="@+id/iv_dl_size_check_login_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />
            <EditText
                android:layout_toRightOf="@id/iv_dl_size_check_login_pw"
                android:id="@+id/et_dl_size_check_login_pw"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="8dp"
                android:hint="비밀번호"
                android:layout_alignParentBottom="true"
                android:background="@null"

                />

        </RelativeLayout>
        <Button
            android:id="@+id/btn_dl_size_check_login"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="#000000"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textSize="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_dl_size_check_login_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="회원가입"
                android:gravity="center"
                android:textColor="#8c000000"
                android:background="#ffffff"
                />
            <Button
                android:id="@+id/btn_dl_size_check_login_search_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이메일 찾기"
                android:gravity="center"
                android:textColor="#8c000000"
                android:background="#ffffff"
                />
            <Button
                android:id="@+id/btn_dl_size_check_login_search_pw"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호 찾기"
                android:textColor="#8c000000"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>