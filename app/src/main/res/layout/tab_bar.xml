<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ibtn_AAAA_main_act_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_home"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ibtn_AAAA_main_act_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_search"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ibtn_AAAA_main_act_ranking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_ranking"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ibtn_AAAA_main_act_jjim"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_jjim"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ibtn_AAAA_main_act_mypage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_mypage"
            android:layout_weight="1" />

</LinearLayout>