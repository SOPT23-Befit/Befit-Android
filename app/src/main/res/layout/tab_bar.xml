    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ibtn_AAAA_main_act_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1"
        />

    <ImageButton
        android:id="@+id/ibtn_AAAA_main_act_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/ibtn_AAAA_main_act_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/ibtn_AAAA_main_act_jjim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/ibtn_AAAA_main_act_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
