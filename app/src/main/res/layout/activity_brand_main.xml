<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BrandMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_brand_main_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="브랜드" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="240dp">

        <ImageView
            android:id="@+id/img_brand_main_background"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_brand_main_circle_background"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/textboxround" />

        <ImageView
            android:id="@+id/img_brand_main_b_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_brand_main_background"
            android:layout_alignParentRight="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_brand_main_b_name_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_brand_main_circle_background"
            android:layout_centerHorizontal="true"
            android:text="VANS" />

        <TextView
            android:id="@+id/tv_brand_main_b_name_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_brand_main_b_name_eng"
            android:layout_centerHorizontal="true"
            android:text="반스" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_brand_main_one_product"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/img_brand_main_back_image"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_brand_main_p_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/img_brand_main_back_image"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_brand_main_p_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_brand_main_back_image"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_brand_main_p_b_name_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_brand_main_p_heart"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="127dp"
            android:text="UNIQLO" />

        <TextView
            android:id="@+id/tv_brand_main_p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_brand_main_p_b_name_kor"
            android:layout_centerVertical="true"
            android:text="투버튼 롱코트" />

        <TextView
            android:id="@+id/tv_brand_main_b_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_brand_main_p_b_name_kor"
            android:layout_alignBottom="@+id/img_brand_main_p_heart"
            android:text="150,000" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_brand_main_product_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="product (65)" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_brand_main_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>