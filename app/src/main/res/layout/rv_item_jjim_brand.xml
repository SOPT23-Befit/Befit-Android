<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/btn_rv_item_jjim_brand"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26dp">

        <ImageView
            android:id="@+id/img_rv_item_jjim_brand_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/img_rv_item_jjim_brand_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/ic_launcher" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_rv_item_jjim_brand_b_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:lineSpacingExtra="2sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="84dp"
        android:text="VANS" />

    <ImageView
        android:id="@+id/img_rv_item_jjim_brand_heart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>