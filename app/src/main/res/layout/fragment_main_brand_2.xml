<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:id="@+id/iv_main_brand_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/woman_critic"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_main_brand_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="브랜드명"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/iv_main_brand_2_product_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/woman_critic"/>
        <ImageView
            android:id="@+id/iv_main_brand_2_product_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/woman_critic"/>
        <ImageView
            android:id="@+id/iv_main_brand_2_product_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/woman_critic"/>
    </LinearLayout>
</LinearLayout>