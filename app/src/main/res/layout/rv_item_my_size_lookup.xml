<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_rv_item_my_size_lookup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/back_rv_item_my_size_lookup_gray"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:background="#99848484"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_rv_item_my_size_lookup_main"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/tv_rv_item_my_size_lookup_b_name"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_below="@+id/img_rv_item_my_size_lookup_main"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="2sp"
            android:text="유니클로"
            android:textColor="#848484"
            android:layout_marginBottom="43dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_rv_item_my_size_lookup_p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_rv_item_my_size_lookup_main"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="1sp"
            android:text="투버튼 롱코트"
            android:textColor="#000000"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_rv_item_my_size_lookup_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/bt_out"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>