<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ResetPasswordActivity">
    <LinearLayout
        android:background="#ffff"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <ImageButton
            android:id="@+id/btn_activity_reset_pw_back"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:text="회원님의 계정 비밀번호를 "
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:text="재설정 해주세요"
            android:layout_marginBottom="130dp"
            />
        <EditText
            android:id="@+id/et_activity_reset_pw_input_new_pw_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="신규 비밀번호 입력"
            android:background="@drawable/textboxround"
            android:textSize="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:layout_marginBottom="12dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_activity_reset_pw_input_new_pw_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:hint="신규 비밀번호 확인"
                android:background="@drawable/textboxround"
                android:textSize="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:layout_marginBottom="12dp"
                />
            <TextView
                android:id="@+id/tv_check_new_pw"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="일치"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#7a36e4"

                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/btn_sign_up_emailoverlap"
            android:layout_alignParentStart="true"
            android:text="영문 대소문자,숫자,특수문자(.!@#$%)를 혼합하여 8~20자로 입력해주세요"
            android:textColor="#80191919"
            android:gravity="center"
            android:textSize="9.5sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btn_activity_reset_password_ok"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="24dp" />
    </RelativeLayout>

</LinearLayout>