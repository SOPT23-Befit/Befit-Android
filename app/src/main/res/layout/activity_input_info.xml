<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="376dp"
        android:layout_height="52dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="25dp"
            android:layout_marginLeft="22.69dp"
            android:layout_marginTop="11.5dp"
            android:layout_marginBottom="15.6dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="39dp"
            android:textSize="7sp"
            android:text="키와 몸무게를 \n 입력해주세요" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/input_height"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="69dp"
            android:text="키" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/input_height"
            android:text="         cm" />

        <TextView
            android:id="@+id/input_weight"
            android:layout_width="60dp"
            android:layout_height="27dp"
            android:layout_below="@+id/input_height"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="68dp"
            android:gravity="center_horizontal"
            android:text="몸무게" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/input_weight"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/input_weight"
            android:text="           kg" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="19dp"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>
</LinearLayout>