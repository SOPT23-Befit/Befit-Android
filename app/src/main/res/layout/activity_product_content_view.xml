<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ProductContentViewActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/btn_activity_product_contentview_cancel"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/cancel"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/tv_activity_product_contentview_brandname"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_toRightOf="@id/btn_activity_product_contentview_cancel"
            android:text="ADD"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:textColor="#000000"

            />
        <ImageButton
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:id="@+id/btn_activity_product_contentview_size_check"
            android:background="@drawable/size_check_box"
            />

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/lottie_loading_web_view"
        android:layout_width="240dp"
        android:layout_height="320dp"
        app:lottie_rawRes="@raw/favourite_app_icon"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />
    <TextView
        android:layout_marginTop="80dp"
        android:id="@+id/tv_anouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Befit announcement"
        android:gravity="center_horizontal"
        android:textColor="#191919"
        android:textSize="16sp"
        />
    <TextView
        android:layout_marginTop="24dp"
        android:id="@+id/tv_anouncement2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#848484"
        android:text="befit은 상품판매에 직접 관여하지 않으며 상품 주문, 배송 및 환불
의 의무는 각 판매업체에 있습니다"

        />
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tv_anouncement3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#848484"
        android:text="befit에서 제공하는 상품정보 및 가격은 쇼핑몰과 일치하지 않을 수
있으니 반드시 브랜드 몰에서 상품 및 가격정보를 확인해주세요"
        />
    <WebView
    android:id="@+id/wv_activity_product_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    </WebView>

</LinearLayout>