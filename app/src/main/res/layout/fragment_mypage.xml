<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="#000000"
        >


        <TextView
            android:id="@+id/tv_my_page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이창현"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/tv_my_page_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>





    <TextView
        android:id="@+id/tv_mypage_fragment_preference"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="나의 패션 취향"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"></LinearLayout>
    <TextView
        android:id="@+id/tv_mypage_fragment_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="나의 사이즈 확인하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        ></LinearLayout>
    <TextView
        android:id="@+id/tv_mypage_fragment_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="통합회원 정보 관리"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"></LinearLayout>

    <ExpandableListView
        android:id="@+id/elv_my_page_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:groupIndicator="@null">

    </ExpandableListView>

</LinearLayout>
</RelativeLayout>