<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectBrandGoodsWindowActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_arrow_wh"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:text="내 사이즈 추가"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/btn_activity_select_brand_goods_window_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginRight="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="#000000">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_selected_brand"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="브랜드 선택"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/activity_add_my_size_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#7a36e4"
            android:layout_marginRight="32dp"/>
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:src="@drawable/ic_right_arrow_wh"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_selected_goods"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:clickable="false">

        <TextView
            android:id="@+id/btn_activity_select_brand_goods_window_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:clickable="false"
            android:text="상품 선택"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_add_my_size_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:textColor="#7a36e4"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_activity_select_brand_goods_window_arrow"
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.5dp"
            android:src="@drawable/ic_right_arrow_wh" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/activity_my_size_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp">

            <ImageView
                android:id="@+id/img_my_size_add_p_img"
                android:layout_width="328dp"
                android:layout_height="328dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="조던 스포츠웨어 에어 티"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_my_size_add_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:text="사이즈 선택"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/sp_my_size_add_select_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_my_size_add_select"
                android:layout_marginLeft="71dp"
                android:layout_toRightOf="@id/tv_my_size_add_select"
                android:spinnerMode="dialog">
            </Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_select_brand_goods_window_size"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TableLayout
                android:id="@+id/layout_my_size_add_display_tvs"
                android:layout_width="301.5dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true">

                <TableRow
                    android:layout_weight="1"
                    android:background="#f9fafb"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_size_add_display_00"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="총장" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="소매길이" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_02"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="어깨너비" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_03"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="가슴단면" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_04"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="암홀" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_size_add_display_10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="61" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="73.5" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="36" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="43" />

                    <TextView
                        android:id="@+id/tv_my_size_add_display_15"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="55.5" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="301.5dp"
            android:layout_height="1dp"
            android:layout_marginLeft="55dp"
            android:alpha="0.3"
            android:background="#000000">
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>