<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectBrandGoodsWindowActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_arrow_wh"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:text="내 사이즈 추가"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="#000000">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_selected_brand"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="브랜드 선택"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/activity_add_my_size_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#7a36e4"
            android:layout_marginRight="32dp"/>
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:src="@drawable/ic_left_arrow_wh"
            android:layout_centerVertical="true"
            android:rotation="180"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_selected_goods"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 선택"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/activity_add_my_size_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#7a36e4"
            android:layout_marginRight="32dp"/>
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:src="@drawable/ic_left_arrow_wh"
            android:rotation="180"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.5dp"/>
    </RelativeLayout>

</LinearLayout>