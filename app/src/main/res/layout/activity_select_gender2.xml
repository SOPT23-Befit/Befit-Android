<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectGenderActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ibtn_select_gender_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="26dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_marginLeft="26dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:tag="bold"
                android:text="성별"
                android:textSize="28sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="을"
                android:textSize="28sp"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="선택해주세요"
            android:textSize="28sp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="4"
        >
        <RelativeLayout
            android:id="@+id/lo_select_gender_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="86.8dp"
            >

            <ImageView
                android:id="@+id/iv_gender_fm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/woman"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_gender_fm"
                android:layout_centerHorizontal="true"
                android:text="여성"
                android:textSize="20sp"
                android:tag="bold"
                android:layout_marginTop="25dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lo_select_gender_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/lo_select_gender_female"
            android:layout_marginLeft="70dp"
            >

            <ImageView
                android:id="@+id/iv_gender_m"
                android:layout_width="wrap_content"
                android:layout_height="86.1dp"
                android:src="@drawable/man"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_gender_m"
                android:layout_centerHorizontal="true"
                android:text="남성"
                android:textSize="20sp"
                android:tag="bold"
                android:layout_marginTop="25dp"/>


        </RelativeLayout>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/ibtn_select_gender_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_grayarrow"
        android:layout_gravity="right"
        android:background="@null"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음 1/3"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"/>
</LinearLayout>