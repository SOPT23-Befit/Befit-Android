<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BrandPreferenceManActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ibtn_brand_prefer_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"/>


<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="41dp"
android:layout_marginLeft="26dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="선호브랜드 2가지"
    android:textColor="#7a36e4"
    android:textStyle="bold"
    android:textSize="28sp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="를"
    android:textStyle="bold"
    android:textSize="28sp"/>

</LinearLayout>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="선택해주세요"
android:textStyle="bold"
android:textSize="28sp"
android:layout_marginLeft="26dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="159dp">

        <ImageButton
            android:id="@+id/ibtn_andersson_bell_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:src="@drawable/man_anderssonbell_brand_select"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_insilence_man"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_istkunst_man" />

        <ImageButton
            android:id="@+id/ibtn_insilence_man"
            android:layout_width="122dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="88dp"
            android:background="@null"
            android:src="@drawable/man_insilence_brand_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_liberteng_man"
            app:layout_constraintVertical_bias="0.1" />

        <ImageButton
            android:id="@+id/ibtn_critic_man"
            android:layout_width="wrap_content"
            android:layout_height="147dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:src="@drawable/man_critic_brand_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.306"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="403dp" />

        <ImageButton
            android:id="@+id/ibtn_thisisne"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:src="@drawable/man_thisisneverthat_brand_select"
            app:layout_constraintBottom_toTopOf="@+id/ibtn_liberteng_man"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.965" />

        <ImageButton
            android:id="@+id/ibtn_romantic_crown"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:src="@drawable/man_romanticcrown_brand_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.245"
            app:layout_constraintStart_toEndOf="@+id/ibtn_thisisne"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibtn_istkunst_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:src="@drawable/man_istkunst_brand_secet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_liberteng_man"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.352" />

        <ImageButton
            android:id="@+id/ibtn_liberteng_man"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="144dp"
            android:background="@null"
            android:src="@drawable/man_liberteng_brand_select"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="331.5dp" />

        <ImageButton
            android:id="@+id/ibtn_covernat_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:src="@drawable/man_covernat_brand_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ibtn_liberteng_man"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_romantic_crown"
            app:layout_constraintVertical_bias="0.132"
            tools:layout_editor_absoluteX="251.4dp"
            tools:layout_editor_absoluteY="353.7dp"/>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ibtn_brand_prefer_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="14dp"
            android:src="@drawable/ic_grayarrow" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2/3"
        android:textSize="16sp"
        android:gravity="center"/>
</LinearLayout>