<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BrandPreferenceManActivity">

    <ImageView
        android:id="@+id/ibtn_brand_prefer_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선호브랜드 2가지"
            android:textColor="#000000"
            android:textSize="28sp"
            android:tag="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를"
            android:textSize="28sp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:text="선택해주세요"
        android:textSize="28sp"
        android:tag="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_thisisneverthat"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="81.7dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/man_thisisneverthat_brand_select" />

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_Romantic_crown"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="240.3dp"
            android:layout_marginTop="46.7dp"
            android:src="@drawable/man_romanticcrown_brand_select" />

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_Ist_Kunst"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="121.9dp"
            android:src="@drawable/man_istkunst_brand_secet" />

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_Liberteng"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="140.0dp"
            android:layout_marginTop="153.4dp"
            android:src="@drawable/man_liberteng_brand_select" />

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_Covernat"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="180.7dp"
            android:layout_marginRight="-10dp"
            android:src="@drawable/man_covernat_brand_select" />

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_Andersson_Bell"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="256.3dp"
            android:src="@drawable/man_anderssonbell_brand_select" />

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_Insilence"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="200.9dp"
            android:layout_marginTop="290dp"
            android:src="@drawable/man_insilence_brand_select" />

        <ImageView
            android:id="@+id/ibtn_activity_brand_preference_man_Critic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="390.4dp"
            android:layout_marginBottom="58dp"
            android:src="@drawable/man_critic_brand_select" />

        <ImageView
            android:id="@+id/ibtn_brand_prefer_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/page_number"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_grayarrow" />

        <TextView
            android:id="@+id/page_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:text="2/3"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>