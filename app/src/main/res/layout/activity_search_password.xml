<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SearchPasswordActivity">
    <LinearLayout
        android:background="#ffff"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <ImageButton
            android:id="@+id/btn_activity_search_pw_back"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:text="비밀번호 찾기"
            />
        <EditText
            android:layout_marginTop="130dp"
            android:id="@+id/et_activity_search_pw_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:background="@drawable/textboxround"
            android:textSize="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:layout_marginBottom="16dp"
            />
        <LinearLayout
            android:id="@+id/btn_activity_search_pw_bithday"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <RelativeLayout
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:id="@+id/btn_activity_search_pw_year"
                android:background="@drawable/textboxround"
                android:layout_width="90.9dp"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/tv_activity_search_pw_year"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:text="연"
                    android:background="#ffffff"
                    android:textColor="#707070"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    />
                <ImageView
                    android:layout_toRightOf="@id/tv_activity_search_pw_year"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:id="@+id/btn_activity_search_pw_month"
                android:background="@drawable/textboxround"
                android:layout_width="90.9dp"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/tv_activity_search_pw_month"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:text="월"
                    android:background="#ffffff"
                    android:textColor="#707070"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    />
                <ImageView
                    android:layout_toRightOf="@id/tv_activity_search_pw_month"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/btn_activity_search_pw_day"
                android:background="@drawable/textboxround"
                android:layout_width="90.9dp"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/tv_activity_search_pw_day"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:text="일"
                    android:background="#ffffff"
                    android:textColor="#707070"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    />
                <ImageView
                    android:layout_toRightOf="@id/tv_activity_search_pw_day"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <EditText
            android:layout_marginTop="16dp"
            android:id="@+id/et_activity_search_pw_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:background="@drawable/textboxround"
            android:textSize="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:layout_marginBottom="12dp"
            />
        <TextView
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/btn_sign_up_emailoverlap"
            android:layout_alignParentStart="true"
            android:text="일치하는 회원정보가 없습니다."
            android:textColor="#7a36e4"
            android:textSize="12sp"
            android:layout_marginTop="4dp"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btn_activity_search_pw_ok"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="24dp" />
    </RelativeLayout>
</LinearLayout>