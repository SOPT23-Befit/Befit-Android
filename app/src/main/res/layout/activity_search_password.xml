<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SearchPasswordActivity">
    <RelativeLayout
        android:background="#ffff"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <ImageButton
            android:id="@+id/btn_activity_search_pw_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cancel" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:orientation="vertical"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        >
        <TextView
            android:layout_marginTop="41dp"
            android:layout_width="168dp"
            android:layout_height="40dp"
            android:textColor="#060606"
            android:textSize="28sp"
            android:text="비밀번호 찾기"
            />
        <EditText
            android:layout_marginTop="130dp"
            android:id="@+id/et_activity_search_pw_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:hint="이름"
            android:maxLength="8"
            android:background="@drawable/textboxround"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#b8191919"
            android:paddingLeft="8dp"
            android:paddingRight="14dp"
            android:layout_marginBottom="13dp"
            />
        <LinearLayout
            android:id="@+id/btn_activity_search_pw_bithday"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <RelativeLayout
                android:layout_marginRight="9.1dp"
                android:layout_weight="1"
                android:id="@+id/btn_activity_search_pw_year"
                android:background="@drawable/textboxround"
                android:layout_width="90.9dp"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/tv_activity_search_pw_year"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:text="년도"
                    android:background="#ffffff"
                    android:textColor="#707070"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    />
                <ImageView
                    android:layout_toRightOf="@id/tv_activity_search_pw_year"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_years_click"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="9.1dp"
                android:layout_weight="1"
                android:id="@+id/btn_activity_search_pw_month"
                android:background="@drawable/textboxround"
                android:layout_width="90.9dp"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/tv_activity_search_pw_month"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:text="월"
                    android:background="#ffffff"
                    android:textColor="#707070"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    />
                <ImageView
                    android:layout_toRightOf="@id/tv_activity_search_pw_month"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_years_click"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/btn_activity_search_pw_day"
                android:background="@drawable/textboxround"
                android:layout_width="90.9dp"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/tv_activity_search_pw_day"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:text="일"
                    android:background="#ffffff"
                    android:textColor="#707070"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    />
                <ImageView
                    android:layout_toRightOf="@id/tv_activity_search_pw_day"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_years_click"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <EditText
            android:layout_marginTop="16dp"
            android:id="@+id/et_activity_search_pw_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:background="@drawable/textboxround"
            android:textSize="17sp"
            android:maxLength="30"
            android:textColor="#b8191919"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            />
        <TextView
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/btn_sign_up_emailoverlap"
            android:layout_alignParentStart="true"
            android:text="일치하는 회원정보가 없습니다."
            android:textColor="#7a36e4"
            android:textSize="10sp"
            android:layout_marginTop="8dp"

            />
        <RelativeLayout
            android:layout_width="248dp"
            android:background="@drawable/blackboxround"
            android:layout_height="42dp"
            android:layout_marginTop="59dp"
            android:layout_gravity="center"

            >

            <TextView
                android:id="@+id/btn_activity_search_pw_ok"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="확인"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>