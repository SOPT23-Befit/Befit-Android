<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41.5dp">
        <RelativeLayout
            android:id="@+id/compare_size_number1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="7.5dp"
                android:layout_height="7.5dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20.5dp"
                android:src="@drawable/oval_shape_white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/compare_size_number2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="7.5dp"
                android:layout_height="7.5dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="20.5dp"
                android:src="@drawable/oval_shape_white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/compare_size_number3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="7.5dp"
                android:layout_height="7.5dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20.5dp"
                android:src="@drawable/oval_shape_black"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>